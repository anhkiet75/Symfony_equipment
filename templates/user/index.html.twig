{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Birthdate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class="tableBody">
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.gender ? 'Male' : 'Female' }}</td>
                <td>{{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-rounded btn-dark">
                    <i class="fa-solid fa-eye"></i>
                    SHOW</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-rounded btn-dark">
                    <i class="far fa-edit fa-fw editor"></i>
                    EDIT</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(users) }}


    {# <a href="{{ path('app_user_new') }}">Create new</a> #}
{% endblock %}

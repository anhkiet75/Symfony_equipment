{% extends 'base.html.twig' %}

{% block title %}Equipment
{% endblock %}

{% block body %}
	<h1>Equipment</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ equipments.id }}</td>
			</tr>
			<tr>
				<th>Serial_number</th>
				<td>{{ equipments.serialNumber }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ equipments.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ equipments.description }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ equipments.status }}</td>
			</tr>
		</tbody>
	</table>
	<h3>History</h3>
	<table class="table">
		 <thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Name</th>
				<th scope="col">Date Assign</th>
				<th scope="col">Due Date</th>
			</tr>
		</thead>
		<tbody>
			{% for history in histories %}
			<tr>
				<th scope="row">{{loop.index}}</th>
				<td>{{history.user.name}}</td>
				<td>{{history.dateassign|date('d-m-Y')}}</td>
				<td>{{history.duedate|date('d-m-Y')}}</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	<a href="{{ path('app_equipment_index') }}" class="btn btn-dark mt-2 px-0" style="width: 130px">
		<i class="fa-solid fa-caret-left"></i>
		Back to list</a>
        <br>
	<a href="{{ path('app_equipment_edit', {'id': equipments.id}) }}" class="btn btn-dark mt-2 " style="width: 130px">
		<i class="far fa-edit fa-fw editor"></i>
	edit</a>

	{{ include('equipment/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-rounded btn-dark">
                    	<i class="fa-solid fa-eye"></i>
							SHOW</a>
                    
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-rounded btn-dark">
                    <i class="far fa-edit fa-fw editor"></i>
							EDIT</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}" class="btn btn-rounded btn-dark">Create new</a>
    {{ knp_pagination_render(categories) }}

{% endblock %}
